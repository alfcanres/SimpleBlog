@model DataTransferObjects.DTO.ApplicationUserInfoReadDTO

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>
                        Author Profile
                    </h3>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                        {
                            <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle mb-2" style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #0d6efd;" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-2" style="width: 120px; height: 120px;">
                                <span class="text-white-50">No Picture</span>
                            </div>
                        }
                        <h5 class="mb-0">@Model.UserName</h5>
                        <a href="@Url.Action("List", "Post", new { userId = Model.Id })" class="btn btn-outline-primary mt-3">
                            <i class="bi bi-list"></i> List author's posts
                        </a>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-5">First Name</dt>
                        <dd class="col-sm-7">@Model.FirstName</dd>

                        <dt class="col-sm-5">Last Name</dt>
                        <dd class="col-sm-7">@Model.LastName</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
