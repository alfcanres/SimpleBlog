@model IEnumerable<PostCommentReadDTO>
@{
    ViewData["Title"] = "Comments";
}

@if (!Model.Any())
{
    <partial name="_NoResults" />
}
else
{
    <div class="list-group list-group-flush">
        @foreach (var item in Model)
        {
            var userInitial = !string.IsNullOrWhiteSpace(item.UserName) ? item.UserName.Trim()[0].ToString().ToUpper() : "U";

            <div class="list-group-item border-0 px-0 pb-3">
                <div class="d-flex align-items-start">



                    <span style="width:32px;height:32px;display:inline-flex;align-items:center;justify-content:center;border-radius:50%;background:#6366f1;color:#fff;font-weight:600;font-size:1.1rem;margin-right:0.5rem;">
                        @userInitial
                    </span>

                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-1">
                            <span class="fw-semibold me-2">@item.UserName</span>
                            <small class="text-muted">@item.CommentDate.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>
                        <div class="bg-light rounded px-3 py-2">
                            <span>@item.CommentText</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}



